<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <TextView
        android:layout_width="20sp"
        android:layout_height="180sp"
        />
    <jingpinwu.android.com.MyImageView android:id="@+id/xlimg"
        android:layout_width="120sp"
        android:layout_height="160sp"
        android:src="@drawable/jiazaizhong"
        android:scaleType="fitXY"
        />"
    <LinearLayout
        android:id="@+id/xltextlist"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="20sp"
            android:layout_height="10sp" />
        <LinearLayout
            android:id="@+id/xltextlist2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:id="@+id/xlname"
                android:text="电影名称"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <TextView
                android:layout_width="20sp"
                android:layout_height="15sp" />
            <TextView
                android:textColor="#555555"
                android:id="@+id/xlactor"
                android:text="主演"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            <TextView
                android:layout_width="20sp"
                android:layout_height="10sp" />
            <TextView
                android:textColor="#555555"
                android:id="@+id/xltype"
                android:text="类型"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            <TextView
                android:layout_width="20sp"
                android:layout_height="10sp" />
            <TextView
                android:textColor="#555555"
                android:id="@+id/xltime"
                android:text="时间"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            <TextView
                android:layout_width="20sp"
                android:layout_height="10sp" />
            <TextView
                android:textColor="#555555"
                android:id="@+id/xlbeizhu"
                android:text="备注"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

